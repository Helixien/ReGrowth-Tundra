    <!--====================================== Mushrooms ======================================== -->

    <ThingDef ParentName="PlantBase">
        <defName>RG-T_Hygrophorus</defName>
        <label>hygrophorus</label>
        <description>A tiny purple and uneatable mushroom growing in small clusters. It can be found exclusively in tundra biomes.</description>
        <graphicData>
            <texPath>Things/Plant/Hygrophorus</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Beauty>2</Beauty>
            <Nutrition>0.4</Nutrition>
        </statBases>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>5</pathCost>
        <ingestible />
        <plant>
            <fertilityMin>0.04</fertilityMin>
            <fertilitySensitivity>0.15</fertilitySensitivity>
            <growDays>45</growDays>
            <maxMeshCount>4</maxMeshCount>
            <dieIfLeafless>true</dieIfLeafless>
            <neverBlightable>true</neverBlightable>
            <visualSizeRange>0.3~0.5</visualSizeRange>
            <topWindExposure>0.1</topWindExposure>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>

    <!--====================================== Trees ======================================== -->

    <ThingDef ParentName="TreeBase">
        <defName>RG-T_Plant_YellowTreePine</defName>
        <label>pine tree</label>
        <description>A rare yellowish conifer. Being very frost-resistant it grows only in tundra and cold bog regions.</description>
        <graphicData>
            <texPath>Things/Plant/YellowTreePine</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.15, 0.3, 0.15)</volume>
                <offset>(0,0,-0.38)</offset>
            </shadowData>
        </graphicData>
        <statBases>
            <Beauty>8</Beauty>
            <Nutrition>0.6</Nutrition>
        </statBases>
        <ingestible />
        <plant>
            <growDays>35</growDays>
            <visualSizeRange>1.5~2.8</visualSizeRange>
            <harvestWork>750</harvestWork>
            <harvestYield>10</harvestYield>
        </plant>
    </ThingDef>

